---
interface NavigationEntry {
  label: string;
  href: string;
}

const NAVIGATION_ITEMS: NavigationEntry[] = [
  { label: "WORKS", href: "/" },
  { label: "ABOUT", href: "/about" },
  { label: "CONTACT", href: "/contact" },
];

const { pathname } = Astro.url;
---

<nav>
  <ul>
    {
      NAVIGATION_ITEMS.map((item) => (
        <li>
          <a
            href={item.href}
            class:list={[
              (item.href === pathname || item.href + "/" === pathname) &&
                "active",
            ]}
          >
            {item.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style lang="scss">
  ul {
    display: flex;
    width: 336px;
    margin: 0;
    padding-inline: 24px;
    padding-top: 20px;
    padding-bottom: 16px;
    position: fixed;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    background-color: #131010;
    border: 2px solid #ffffff3a;
    border-top: none;
    $border-radius-bottom: 8px;
    border-bottom-left-radius: $border-radius-bottom;
    border-bottom-right-radius: $border-radius-bottom;
    box-shadow: 0 0 22px #0000005a;
    flex-direction: row;
    justify-content: space-between;
    list-style: none;
    z-index: 255;
  }

  $item-outline: 2px solid;

  a {
    color: inherit;
    font-weight: 900;
    font-size: 16px;
    text-decoration: none;
    padding: 8px 12px;
    border-radius: 4px;
    position: relative;
    outline: 2px solid rgba($color-accent, 0);
    user-select: none;
    transition: 0.2s;

    &:hover,
    &:focus-visible {
      outline: $item-outline rgba($color-accent, 0.3);
    }
  }

  .active {
    color: #ffeee5;
    background-color: rgba($color-accent, 0.125);
    outline: $item-outline rgba($color-accent, 0.5);
    text-shadow:
      0 0 8px $color-accent,
      0 0 16px $color-accent;
    box-shadow: 0 0 24px rgba($color-accent, 0.3);

    &:hover,
    &:focus-visible {
      outline: $item-outline $color-accent;
      filter: brightness(1.3);
    }
  }

  @include sp {
    ul {
      width: 100%;
      padding-block: 17px;
      justify-content: space-evenly;
    }

    a {
      font-size: 14px;
      padding: 6px 10px;
    }
  }
</style>
