{
  "plugins": ["prettier-plugin-astro", "prettier-plugin-svelte"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    },
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "useTabs": true,
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 100
      }
    },
    {
      "files": "*",
      "options": {
        "endOfLine": "lf"
      }
    }
  ]
}
